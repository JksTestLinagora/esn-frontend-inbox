.modal.inbox-modal.inbox-move-item.inbox-root
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title {{ 'Move to' | translate }}
      .modal-body
        .text-center(ng-if="!mailboxes", openpaas-logo-spinner, spinner-start-active="1", spinner-size="0.3")
        esn-filter-input(on-change="ctrl.filter = $filter")
        mailbox-display.lv-item(mailbox="mailbox", hide-badge="true", ng-click="ctrl.moveTo(mailbox)", ng-repeat="mailbox in mailboxes | inboxFilterRestrictedMailboxes | filter: { name: ctrl.filter } track by mailbox.id")
      .modal-footer
        button.btn.btn-link(type="button", esn-back-button="^") {{ 'Cancel' | translate }}
